
<% include ./partials/header %>

<div class="container">

     <% if(!locals.user) { %>
        <h1 id="hero">What the Duck</h1>
    <% } %>

    <% if(locals.user) { %>
        <div id="welcome">
        <p>Welcome <%= user.username %></p>
    </div>


        <!-- Button trigger modal -->
        <button type="button" class="btn btn-info btn-sm" data-toggle="modal" data-target="#myModal">
          Add a bird
        </button>
        <div>
            <br>
        </div>    

        <div class="box">
            <h3>My List of Birds</h3>
            <%for(var x=0;x<userBirds.length;x++){%>
              <div class="birdName">
                <%= userBirds[x].birdName %>
              </div>
              <img width="158" height="150" class="thumbnailImage" src="<%= userBirds[x].birdImage %>">
            <% } %>
        </div>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
          <div class="modal-dialog" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">Birds</h4>
                <input type="text" class="locationText">
              </div>
              <div class="modal-body">
                    <div class="row">

                    <%for(var i=0;i<bird.length;i++){%>

                      <div class="col-xs-6 col-md-4">
                        <div class="thumbnail">
                          <img class="thumbnailImage" src="<%= bird[i].images[0].url %>">
                          <div class="caption">
                            <h4><%= bird[i].name %></h4>
                          </div>
                        </div>
                      </div>

                    <% } %>

                    </div>

              </div>
              <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
              </div>
            </div>
          </div>
        </div>
    <% } %>

</div>



<% if(locals.user){ %>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDTx6HnaOWxCy2LitrHA0qX1oSkwwUFcpg&signed_in=true&callback=initMap" async defer></script>
<div id="map"></div>
    <script>
        function initMap(){
            map = new google.maps.Map(document.getElementById('map'), {
                zoom: 20,
                center: {lat: 30.2500, lng: -97.7500}
            });
            var sightings = <%- JSON.stringify(userBirds) %>;
            for(var i = 0; i < sightings.length; i++){
                var latlng = new google.maps.LatLng(sightings[i].lat, sightings[i].lng);
                var marker = new google.maps.Marker({
                    map: map,
                    position: latlng,
                    title: sightings[i].birdName
                });
            }
        }
    </script>
<% } %>
<script>
$(document).ready(function(){
    $('.thumbnail').click(function(){
        var title = $(this).text().trim();
        var image = $(this).children('img').attr('src');
        var location = $(".locationText").val();
        $.ajax({
            url: '/newSighting',
            method: "POST",
            data: {title: title, birdImage: image, location: location},
        }).done(function(sighting){
            console.log(sighting);
            var latlng = new google.maps.LatLng(sighting.lat, sighting.lng);
            map.setCenter(latlng);
            var marker = new google.maps.Marker({
                map: map,
                position: latlng,
                title: sighting.birdName
            });
        });
    });        
});
</script>


